<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UniversityApp.WPF"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="UniversityApp.WPF.MainWindow"
        Title="University App" Height="600" Width="1000" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"   
        Background="Transparent" >

    <Border Background="#272537"
            CornerRadius="20"
            MouseDown="DragWindow">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions >
                <RowDefinition Height="70 "/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="УНИВЕРСИТЕТ" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="#CFCFCF"
                       FontSize="22"
                       FontFamily="Calibri"/>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <RadioButton Content="СТУДЕНТЫ"
                             Height="50"
                             Foreground="#CFCFCF"
                             FontSize="14"
                             IsChecked="True"
                             Style="{StaticResource MenuButtonTheme}" Click="StudentsButton_Click"/>

                <RadioButton Content="ГРУППЫ"
                            Height="50"
                            Foreground="#CFCFCF"
                            FontSize="14"
                            Style="{StaticResource MenuButtonTheme}" Click="GroupsButton_Click"/>

                <RadioButton Content="ОТМЕТКИ"
                            Height="50"
                            Foreground="#CFCFCF"
                            FontSize="14"
                            Style="{StaticResource MenuButtonTheme}" Click="RecordsButton_Click"/>

                <RadioButton Content="ПРЕДМЕТЫ"
                            Height="50" 
                            Foreground="#CFCFCF"
                            FontSize="14"
                            Style="{StaticResource MenuButtonTheme}" Click="SubjectsButton_Click"/>


                <Separator Margin="50" Visibility="Hidden"/>


                <RadioButton Content="ИЗМЕНИТЬ"
                             Height="50"
                             Foreground="#CFCFCF"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="ДОБАВИТЬ"
                             Height="50"
                             Foreground="#CFCFCF"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

                <RadioButton Content="УДАЛИТЬ"
                             Height="50" 
                             Foreground="#CFCFCF"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Click="DeleteButton_Click"/>

                <RadioButton Content="ВЫЙТИ"
                             Height="50"
                             Foreground="#CFCFCF"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" Click="ExitButton_Click"/>

            </StackPanel>

            <TextBox Grid.Column="1"
                     Width="300"
                     Height="40"
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Left"
                     Margin="51,0,0,10" 
                     Foreground="#CFCFCF"
                     FontSize="16"
                     Style="{StaticResource TextBoxTheme}"
                     Tag="Поиск"/>

            <ContentControl Grid.Row="1" Grid.Column="1" x:Name="MainContentControl"/>
        </Grid>
    </Border>
</Window>
