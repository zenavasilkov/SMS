<Window x:Class="UniversityApp.WPF.Controls.StudentDialog"
        xmlns:helpers="clr-namespace:UniversityApp.WPF.Helpers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UniversityApp.WPF.Controls"
        Title="StudentDialog"
        Height="400" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="#272537"
            CornerRadius="20"
            Padding="20"
            MouseDown="DragWindow">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
 
            <TextBlock Text="Добавить / Изменить студента"
                       Foreground="#CFCFCF"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
 
            <StackPanel Grid.Row="1" Margin="0,10,0,10" VerticalAlignment="Center">
                <TextBox Margin="0,5" 
                         Height="40" 
                         FontSize="16"
                         Style="{StaticResource TextBoxTheme}" 
                         Tag="Введите имя"/>
                <TextBox Margin="0,5" 
                         Height="40" 
                         FontSize="16"
                         Style="{StaticResource TextBoxTheme}" 
                         Tag="Введите фамилию"/>
                <TextBox Margin="0,5" 
                         Height="40" 
                         FontSize="16"
                         Style="{StaticResource TextBoxTheme}" 
                         Tag="Введите отчество"/>
                <TextBox Margin="0,5" 
                         Height="40"  
                         FontSize="16"
                         Style="{StaticResource TextBoxTheme}" 
                         Tag="Введите номер зачётки"/>
                <!-- Тут нужно будет позже вставить ComboBox для группы -->
            </StackPanel>
 
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
                <RadioButton Style="{StaticResource MenuButtonTheme}" 
                             Content="Отмена" 
                             Width="200" 
                             Height="40"
                             Margin="0,0,0,0" 
                             FontSize="16"  
                             Foreground="#CFCFCF"
                             FontFamily="Calibri"
                             HorizontalAlignment="Center"
                             Click="Cancel_Click"/>
                <RadioButton Style="{StaticResource MenuButtonTheme}" 
                             Content="Сохранить" 
                             Width="200" 
                             Height="40"
                             Margin="0,0,20,0" 
                             FontSize="16"
                             Foreground="#CFCFCF"
                             FontFamily="Calibri"
                             HorizontalAlignment="Center"
                             Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
