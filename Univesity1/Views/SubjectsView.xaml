<UserControl x:Class="UniversityApp.WPF.Views.SubjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Subjects}"
                  SelectedItem="{Binding SelectedSubject, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Background="#353340"
                  Foreground="White"
                  FontSize="14"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  Style="{StaticResource DarkDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                <DataGridTextColumn Header="Обозначение" Binding="{Binding Designation}" /> 
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
